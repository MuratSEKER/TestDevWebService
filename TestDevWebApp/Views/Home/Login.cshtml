@model TestDevWebApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Login Page</h1>
    <form class="form-signin" method="post" asp-controller="Home" asp-action="Login">
        <img class="mb-4" src="~/images/logo.png" alt="" width="72" height="72">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName" class="sr-only"></label>
            <input asp-for="UserName" class="form-control" placeholder="User Name" required="" autofocus="" />
           
        </div>
        <div class="form-group">
            <label asp-for="Password" class="sr-only"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required=""/>
        </div>
        <div class="form-group">
            <input type="submit" value="Log In" class="btn btn-lg btn-primary btn-block" />
        </div>
    </form>
</div>